{
    "manifest_version": 3,
    "name": "Eyedropper",
    "version": "1.0",
    "description": "Analyse colors",
    "icons": {
        "16": "images/eyedropper-16.png",
        "32": "images/eyedropper-32.png",
        "48": "images/eyedropper-48.png",
        "128": "images/eyedropper-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            }
        }
    },
    "action": {
        "default_icon": {
            "16": "images/eyedropper-16.png",
            "32": "images/eyedropper-32.png",
            "48": "images/eyedropper-48.png",
            "128": "images/eyedropper-128.png"
        },
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}